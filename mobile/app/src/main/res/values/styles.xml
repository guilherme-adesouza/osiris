<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BackgroundTintColorPrimary" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="BackgroundTintColorVermelho" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/vermelho</item>
    </style>

    <style name="BackgroundTintColorPrimaryDark" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextOff" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextOffBold" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TituloGrandeBranco" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">23sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloGrandePreto" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloBold" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloBoldPreto" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloNormal" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloNormalPequeno" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloNormalPreto" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloItalico" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">2dp</item>
        <!--<item name="android:fontFamily">@font/helvetica_light_italic</item>-->
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TextLabelPreto" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:color">@color/preto</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInput" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!--<item name="android:fontFamily">@font/helvetica_light</item>-->
    </style>

    <style name="TituloCinza" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helv</item>-->
    </style>

    <style name="TituloCinzaPad0" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">@font/helv</item>-->
    </style>

    <style name="TituloBranco" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:fontFamily">@font/helv</item>-->
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <!--<item name="android:height">@dimen/spinner_height</item>-->
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="themeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
